    script(src='/javascripts/main.2706ec3191df15072433.js')
    script(src='/javascripts/account.da5ef0ae6e834cf080d3.js')
    script(src='/javascripts/searchFault.js')
    script(src='/javascripts/searchSettlement.js')
    script(src='/javascripts/agreement.js')