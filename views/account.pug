doctype html
html(lang='pl')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    title Konto
    link(href='https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;900&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.2/css/all.css' integrity='sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr' crossorigin='anonymous')
    link(href='/stylesheets/main.e1ba81f63acc95ff784d.css' rel='stylesheet')
    link(href='/stylesheets/error.css' rel='stylesheet')
  body.accountContainer.container
    header.header
      h1.header__title Konto
      p.header__description Tutaj możesz sprawdzić informacje o swoim koncie
      i.fas.fa-angle-double-down.header__icon
    .burger
      i.fas.fa-bars
    nav.navigation
      ul.navigation__list
        li.nagivation__item
          a.navigation__link(href='/') Strona główna
        li.nagivation__item
          a.navigation__link(href='/listRooms') Pokoje
        li.nagivation__item
          a.navigation__link.navigation__link--active(href='/favourites') Ulubione
        li.nagivation__item
          a.navigation__link(href='/searchUsers') Użytkownicy
        li.nagivation__item
          a.navigation__link(href='/messages') Wiadomości
        li.nagivation__item
          a.navigation__link(href='/account') Konto
        if  role === 'admin'
          li.nagivation__item
            a.navigation__link(href='/admin') Admin
        li.nagivation__item
          if role
            a.navigation__link.navigation__link--logIn(href='/logOut') Wyloguj
          else
            a.navigation__link.navigation__link--logIn(href='/logIn')
              | Zaloguj
              | si&eogon;
    main.accountPanel
      h2.accountPanel__titleDate Twoje dane
      .accountPanel__infoHolder
        p.accountPanel__info Login: #{data.login}
        p.accountPanel__info Hasło: #{data.password}
        p.accountPanel__info Imię: #{data.name}
        p.accountPanel__info Nazwisko: #{data.surname}
        p.accountPanel__info Email: #{data.email}
        p.accountPanel__info Numer telefonu: #{data.phone}
        p.accountPanel__info Data urodzenia: #{formatDate}
        p.accountPanel__info płeć: #{data.sex}
      .listInfo
        h3.listInfo__title Lista pokoi
        i.fas.fa-caret-up.listInfo__switch(data-switch='false')
        p.listInfo__add.listInfo__add--room
          i.fas.fa-plus-circle
        ul.listRooms
          li.listRooms__item
            p.listRooms__id 1
            img.listRooms__image(src='imgs/room.a9cc98f6097b1131cbf2ee2ef6226b5c.jpg' alt='zdjęcie pokoju')
            p.listRooms__login
              a.listRooms__link(href='./profile.html') Veex
            button.listRooms__btn--delete Usuń z pokoju
          li.listRooms__item
            p.listRooms__id 2
            img.listRooms__image(src='imgs/room.a9cc98f6097b1131cbf2ee2ef6226b5c.jpg' alt='zdjęcie pokoju')
            p.listRooms__login.listRooms__login--empty Nie ma nikogo przypisanego do pokoju
            button.listRooms__btn--add Dodaj do pokoju
          li.listRooms__item
            p.listRooms__id 3
            img.listRooms__image(src='imgs/room.a9cc98f6097b1131cbf2ee2ef6226b5c.jpg' alt='zdjęcie pokoju')
            p.listRooms__login.listRooms__login--empty Nie ma nikogo przypisanego do pokoju
            button.listRooms__btn--add Dodaj do pokoju
          li.listRooms__item
            p.listRooms__id 4
            img.listRooms__image(src='imgs/room.a9cc98f6097b1131cbf2ee2ef6226b5c.jpg' alt='zdjęcie pokoju')
            p.listRooms__login.listRooms__login--empty Nie ma nikogo przypisanego do pokoju
            button.listRooms__btn--add Dodaj do pokoju
      .listInfo
        h3.listInfo__title Lista usterek
        i.fas.fa-caret-up.listInfo__switch.listInfo__Faults(data-switch='false')
        p.listInfo__add.listInfo__add--fault
          i.fas.fa-plus-circle
        ul.listFaults
          li.listFaults__item
            p.listFaults__id 1
            p.listFaults__description
              | Lorem ipsum dolor sit amet, consectetur adipisicing elit.
              | Voluptates asperiores perspiciatis dolorum vitae ab possimus nesciunt rei
            p.listFaults__status W trakcie
            button.listFaults__change Zmień status
      .listInfo
        h3.listInfo__title Lista umów
        i.fas.fa-caret-up.listInfo__switch(data-switch='false')
        p.listInfo__add.listInfo__add--agreement
          i.fas.fa-plus-circle
        ul.listAgreements
          li.listAgreements__item
            p.listAgreements__id 1
            p.listAgreements__name
              a.listAgreements__link(href='#') nazwa__umowy.pdf
            p.listAgreements__date 10/20
          li.listAgreements__item
            p.listAgreements__id 2
            p.listAgreements__name
              a.listAgreements__link(href='#') nazwa__umowy.pdf
            p.listAgreements__date 10/20
          li.listAgreements__item
            p.listAgreements__id 3
            p.listAgreements__name
              a.listAgreements__link(href='#') nazwa__umowy.pdf
            p.listAgreements__date 10/20
          li.listAgreements__item
            p.listAgreements__id 4
            p.listAgreements__name
              a.listAgreements__link(href='#') nazwa__umowy.pdf
            p.listAgreements__date 10/20
      .listInfo
        h3.listInfo__title Lista rozliczeń
        i.fas.fa-caret-up.listInfo__switch.listInfo__Settlement(data-switch='false')
        p.listInfo__add.listInfo__add--settlement
          i.fas.fa-plus-circle
        ul.listSettlements
          li.listSettlements__item
            p.listSettlements__id 1
            p.listSettlements__cost 1233.00zł
            p.listSettlements__deadline 26.11.2020r
            p.listSettlements__login Veex
            p.listSettlements__login.listSettlements__login--owner Owner
            p.listSettlements__delete
              i.fas.fa-times-circle
      .addRoom
        i.fas.fa-times.addRoom__exit
        h2.addRoom__title Dodaj nowy pokój
        form.addRoom__form
          .addRoom__field
            label.addRoom__label Nazwa ogłoszenia
            input.addRoom__input(placeholder='Podaj nazwę ogłoszenia')
          .addRoom__field
            label.addRoom__label Opis
            input.addRoom__input.addRoom__input--description(placeholder='Dodaj opis ogłoszenia')
          .addRoom__field
            label.addRoom__label Kwota za miesiąc
            input.addRoom__input(type='number' placeholder='Podaj kwotę')
          .addRoom__field
            label.addRoom__label Podaj lokalizacje pokoju
            input.addRoom__input(placeholder='Podaj lokalizacje')
          .addRoom__field
            label.addRoom__label Dodaj zdjęcie pokoju
            input.addRoom__input.addRoom__input--file(type='file')
          .addRoom__field
            input.addRoom__submit(type='submit' value='Wyślij')
      .addFault
        i.fas.fa-times.addFault__exit
        h2.addFault__title Dodaj nową usterkę
        form.addFault__form
          .addFault__field
            label.addFault__label Opis usterki
            input.addFault__input(placeholder='Podaj opis usterki')
          .addFault__field
            label.addFault__label Podaj właściciela pokoju/najemcę
            input.addFault__input(placeholder='Podaj użytkownika')
            p.addFault__error Zły login
          .addFault__field
            label.addFault__label Status
            input.addFault__input.addFault__input--description(value='W trakcie' disabled='disabled')
          .addFault__field
            input.addFault__submit(type='submit' value='Wyślij')
      .addAgreement
        i.fas.fa-times.addAgreement__exit
        h2.addAgreement__title Dodaj nową umowę
        form.addAgreement__form(method='POST' action='account/addAgreement' enctype="multipart/form-data")
          .addAgreement__field
            label.addAgreement__label Nazwa umowy
            input.addAgreement__input(name='name' placeholder='Podaj nazwę umowy')
            p.addFault__error.addAgreement__errorName Podaj nazwę umowy
          .addAgreement__field
            label.addAgreement__label Podaj login użytkownika
            input.addAgreement__input(name='login' placeholder='Podaj login użytkownika')
            p.addFault__error.addAgreement__errorLogin Podaj login
          .addAgreement__field
            label.addAgreement__label Dodaj umowę
            input.addAgreement__input.addAgreement__input--file(name='file' type='file')
            p.addFault__error.addAgreement__errorFile Podaj plik
          .addAgreement__field
            input.addAgreement__submit(type='submit' value='Wyślij' disabled)
      .addSettlement
        i.fas.fa-times.addSettlement__exit
        h2.addSettlement__title Dodaj nowe rozliczenie
        form.addSettlement__form
          .addSettlement__field
            label.addSettlement__label Kwota rozliczenia
            input.addSettlement__input(placeholder='Podaj kwotę rozliczenia')
            p.addFault__error.addSettlement__error Podaj kwotę
          .addSettlement__field
            label.addSettlement__label Podaj termin płatności
            input.addSettlement__input(type='date')
            p.addFault__error.addSettlement__error Podaj datę
          .addSettlement__field
            label.addSettlement__label Podaj login użytkownika
            input.addSettlement__input(placeholder='Podaj login')
            p.addFault__error.addSettlement__error Zły login
          .addSettlement__field
            input.addSettlement__submit(type='submit' value='Wyślij')
      .addUserRoom
        i.fas.fa-times.addUserRoom__exit
        h2.addUserRoom__title Przypisz użytkownika do pokoju
        form.addUserRoom__form
          .addUserRoom__field
            label.addUserRoom__label Podaj login użytkownika
            input.addUserRoom__input(placeholder='Podaj login')
          .addUserRoom__field
            input.addUserRoom__submit(type='submit' value='Dodaj')
    footer.footer
      p.footer__text © Prawa zastrzeżone przez Andrzej Łuszcz
